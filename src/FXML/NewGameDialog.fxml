<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="416.0" prefWidth="597.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.NewGameDialog">
    <children>
        <VBox alignment="CENTER" layoutX="46.0" layoutY="7.0" prefHeight="403.0" prefWidth="505.0"
              AnchorPane.bottomAnchor="6.0">
            <children>
                <GridPane alignment="CENTER" prefHeight="193.0" prefWidth="512.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="257.0" minWidth="10.0" prefWidth="257.0"/>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="256.0" minWidth="10.0"
                                           prefWidth="255.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label alignment="CENTER" text="Nombre de lignes" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
                        <Label prefHeight="17.0" prefWidth="124.0" text="Nombres de colonnes" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                        <Spinner fx:id="nbLignes" editable="true" initialValue="6" GridPane.columnIndex="1">
                            <valueFactory>
                                <SpinnerValueFactory.IntegerSpinnerValueFactory max="10" min="4" />
                            </valueFactory>
                        </Spinner>
                        <Spinner fx:id="nbColonnes" initialValue="7" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <valueFactory>
                                <SpinnerValueFactory.IntegerSpinnerValueFactory max="10" min="4" />
                            </valueFactory>
                        </Spinner>
                    </children>
                    <padding>
                        <Insets top="10.0" />
                    </padding>
                </GridPane>
                <TableView fx:id="joueurTableView" editable="true" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                        <TableColumn fx:id="nomCol" prefWidth="251.0" text="Nom du joueur" />
                        <TableColumn fx:id="couleurCol" minWidth="0.0" prefWidth="253.0" text="Couleur du pion" />
                    </columns>
                </TableView>
                <AnchorPane prefHeight="37.0" prefWidth="505.0">
                    <children>
                        <Button layoutY="6.0" mnemonicParsing="false" onMouseClicked="#addPlayer"
                                text="Ajouter joueur"/>
                        <Button alignment="BOTTOM_RIGHT" contentDisplay="TOP" layoutX="396.0" layoutY="6.0"
                                mnemonicParsing="false" onMouseClicked="#removePlayer" text="Supprimer joueur"/>
                        <Button fx:id="btnJouer" layoutX="104.0" layoutY="6.0" mnemonicParsing="false" prefHeight="25.0"
                                prefWidth="279.0" text="Jouer" textAlignment="CENTER">
                            <opaqueInsets>
                                <Insets/>
                            </opaqueInsets>
                        </Button>
                    </children>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </AnchorPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
